<Application x:Class="Universal_THCRAP_Launcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Universal_THCRAP_Launcher"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" Direction="270" ShadowDepth="3" Opacity="0.3" Color="Black"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Categories.xaml"/>
                <ResourceDictionary Source="/Themes/ConfigTabButton.xaml"/>
                <ResourceDictionary Source="/Themes/MainButton.xaml"/>
                <ResourceDictionary Source="/Themes/NavButton.xaml"/>
                <ResourceDictionary Source="/Themes/Scrollbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
