<Window x:Class="Universal_THCRAP_Launcher.MVVM.View.Dialogs.DeleteGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rename Instance"
        WindowStyle="None"
        Background="Transparent"
        FontFamily="pack://application:,,,/Resources/#Inter Light"
        Height="144" Width="500"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="#24282B" CornerRadius="7" SnapsToDevicePixels="True" Padding="0.6">
        <Border Background="#111111" CornerRadius="6" SnapsToDevicePixels="True" Padding="0.5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="Transparent" MouseDown="Window_LeftMouseButtonDown">
                    <Image Source="/Resources/icon.png" HorizontalAlignment="Left" Width="20" Margin="6,0,0,0"/>
                    <TextBlock Text="Delete Instance" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="14"/>
                    <Button x:Name="ButtonClose" Content="&#x2715;" Width="40" Height="28" HorizontalAlignment="Right"
                            BorderBrush="Transparent" Background="Transparent" Foreground="White" Click="ButtonClose_Click"/>
                </Grid>

                <Grid Grid.Row="1" Margin="28,10,28,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock HorizontalAlignment="Center" Foreground="#D32F2F" FontSize="16"
                                Text="Are you sure you want to delete this Instance?"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock HorizontalAlignment="Center" Foreground="#D32F2F" FontSize="16"
                                Text="Deleting an Instance will only remove it from the launcher."/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <TextBlock HorizontalAlignment="Center" Foreground="#D32F2F" FontSize="16"
                            Text="This action cannot be undone."/>
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" Margin="30,0,10,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Width="80" Click="Cancel_Click" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Delete" Width="80" Click="Save_Click" Style="{StaticResource NavButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
