<Window x:Class="Universal_THCRAP_Launcher.MVVM.View.Dialogs.ChangeCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Universal_THCRAP_Launcher"
        Title="Change Category"
        Width="620" Height="480"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="pack://application:,,,/Resources/#Inter Light"
        Loaded="Window_Loaded">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="#24282B" CornerRadius="7" Padding="0.6">
        <Border Background="#111111" CornerRadius="6" Padding="0.5">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="56"/>
                </Grid.RowDefinitions>

                <!-- Titlebar -->
                <Grid Grid.Row="0" Background="Transparent" MouseDown="Window_LeftMouseButtonDown">
                    <TextBlock Text="Edit Categories" Foreground="White" FontSize="14" FontWeight="Bold"
                               VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="buttonClose" Content="&#x2715;" Width="40" Height="28"
                                BorderBrush="Transparent" Background="Transparent" Foreground="White"
                                Click="ButtonClose_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Category List + Add -->
                    <StackPanel Grid.Column="0" Margin="6,0,12,0">
                        <TextBlock Text="Existing categories" Foreground="White" FontSize="13" FontWeight="Bold" Margin="2"/>

                        <Border Background="#1A1A1A" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="4" Margin="0,8,0,0" Padding="4">
                            <ListBox x:Name="CategoryListBox"
                                     ItemsSource="{Binding Categories}"
                                     SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     AllowDrop="True"
                                     PreviewMouseLeftButtonDown="CategoryListBox_PreviewMouseLeftButtonDown"
                                     PreviewMouseMove="CategoryListBox_PreviewMouseMove"
                                     Drop="CategoryListBox_Drop"
                                     Height="240">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="28"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Drag handle -->
                                            <TextBlock Text="≡" FontSize="14" VerticalAlignment="Center" Grid.Column="0"
                                                       Foreground="#A2A3A4" HorizontalAlignment="Center" />

                                            <!-- Category name -->
                                            <TextBlock Text="{Binding}" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>

                                            <!-- Actions: rename / delete -->
                                            <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" Margin="6,0,0,0">
                                                <Button Content="✎" Width="28" Height="22" Margin="0,0,6,0"
                                                        ToolTip="Rename" Click="RenameCategory_Click"
                                                        Tag="{Binding}" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                                                <Button Content="✖" Width="28" Height="22"
                                                        ToolTip="Delete" Click="DeleteCategory_Click"
                                                        Tag="{Binding}" Background="#D32F2F" Foreground="White"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Add new category -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Top">
                            <TextBox x:Name="NewCategoryTextBox" Width="240" Height="30" VerticalAlignment="Center"
                                     Background="#1A1A1A" Foreground="White" BorderBrush="#3C3C3C" Padding="6"
                                     KeyDown="NewCategoryTextBox_KeyDown" />
                            <Button Content="Create Category" Width="130" Height="30" Margin="8,0,0,0"
                                    Background="#388E3C" Foreground="White" Click="CreateCategory_Click"/>
                        </StackPanel>

                        <TextBlock Text="Tip: drag the ≡ handle to reorder categories." Foreground="#9A9A9A" Margin="2,8,0,0" FontSize="12"/>
                    </StackPanel>

                    <!-- Right: Preview / info pane (optional) -->
                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                        <TextBlock Text="Preview" Foreground="White" FontSize="13" FontWeight="Bold"/>
                        <Border Background="#151515" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="4" Margin="0,8,0,0" Padding="8">
                            <StackPanel>
                                <TextBlock Text="Select a category to preview it here." Foreground="#B0B0B0" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding SelectedCategory}" Foreground="White" FontWeight="Bold" Margin="0,8,0,0" />
                                <!-- you can later show items count, examples etc. -->
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Bottom buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,6">
                    <Button Content="Cancel" Width="90" Height="34" Margin="0,0,8,0"
                            Background="#3C3C3C" Foreground="White" Click="Cancel_Click"/>
                    <Button Content="OK" Width="90" Height="34" Background="#388E3C"
                            Foreground="#111111" FontWeight="Bold" Click="Ok_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>