<Window x:Class="Universal_THCRAP_Launcher.MVVM.View.Dialogs.NameGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rename Instance"
        WindowStyle="None"
        Background="Transparent"
        FontFamily="pack://application:,,,/Resources/#Inter Light"
        Height="130" Width="500"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MainTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter Light"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>

        <KeyBinding Key="Enter" Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Window.InputBindings>

    <Border Background="#24282B" CornerRadius="7" SnapsToDevicePixels="True" Padding="0.6">
        <Border Background="#111111" CornerRadius="6" SnapsToDevicePixels="True" Padding="0.5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="Transparent" MouseDown="Window_LeftMouseButtonDown">
                    <Image Source="/Resources/icon.png" HorizontalAlignment="Left" Width="20" Margin="6,0,0,0"/>
                    <TextBlock Text="Rename Instance" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="14"/>
                    <Button x:Name="ButtonClose" Content="&#x2715;" Width="40" Height="28" HorizontalAlignment="Right"
                            BorderBrush="Transparent" Background="Transparent" Foreground="White" Click="ButtonClose_Click"/>
                </Grid>
                
                <Grid Grid.Row="1" Margin="28,10,28,0">
                    <StackPanel>
                        <TextBox x:Name="test" Width="440" MaxLength="30" Style="{StaticResource MainTextBoxStyle}" TextChanged="NameTextBox_TextChanged"/>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Row="2" Margin="30,0,10,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <TextBlock x:Name="WarningText" Foreground="#D32F2F" FontSize="12" Visibility="Collapsed"
                                   Text="Name contains illegal characters."/>
                    </Grid>

                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Width="80" Click="Cancel_Click" Style="{StaticResource NavButtonStyle}"/>
                            <Button Content="Save" Width="80" Click="Save_Click" Style="{StaticResource NavButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
